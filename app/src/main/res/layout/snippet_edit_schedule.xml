<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_date_range_black_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/editSchedule_txtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="18sp"
        tools:text="April, 1 2019" />

    <TextView
        android:id="@+id/editSchedule_changeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_edit_black_24dp"
        android:drawablePadding="5dp"
        android:text="@string/editModel_change"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/editSchedule_makeRecurring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:drawableStart="@drawable/ic_repeat_black_24dp"
        android:drawablePadding="5dp"
        android:text="@string/editModel_recurring"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp" />

</LinearLayout>